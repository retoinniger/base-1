tr id=dom_id(project)
  th.name = link_to project.name, project

  td.description
    - if project.description.present?
      pre = project.description

  td.customer
    - if project.customer.present?
      = link_to project.customer.name, project.customer

  td.total_worklTime
    - if project.timetracks.present?
      = project.timetracks.sum(:work_time)

  td.total_billTime
    - if project.timetracks.present?
      = project.timetracks.sum(:bill_time)

  td.actions
    == render 'shared/index/actions', resource: project
